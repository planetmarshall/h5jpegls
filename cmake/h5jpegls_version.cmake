function(h5jpegls_configure_version_file SOURCE DESTINATION)
    set(H5JPEGLS_PRERELEASE -alpha)
    set(H5JPEGLS_VERSION "${PROJECT_VERSION}${H5JPEGLS_PRERELEASE}")
    set(H5JPEGLS_DESCRIPTION "${CMAKE_PROJECT_DESCRIPTION} v${H5JPEGLS_VERSION} <${CMAKE_PROJECT_HOMEPAGE_URL}>")
configure_file(${SOURCE} ${DESTINATION})
endfunction()